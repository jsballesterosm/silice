{% extends 'layouts/base.twig' %}

{% block stylesheets %}
    <style>
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        .sidebar {
            min-width: 250px;
            max-width: 250px;
            min-height: 100vh;
            transition: all 0.3s;
        }
        @media (max-width: 768px) {
            .sidebar {
                min-height: auto;
                width: 100%;
                max-width: 100%;
            }
        }
    </style>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
{% endblock %}

{% block content %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Silice</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navTop">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navTop">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-center">
                    <li class="nav-item text-white me-3">
                        <small class="text-secondary">Conectado como:</small>
                        <strong id="display-name">@@@</strong>
                        <span class="badge bg-primary ms-1" id="display-username">@@@</span>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-outline-danger btn-sm cerrar-sesion" href="#">
                            <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="d-flex flex-column flex-md-row">
        <div class="sidebar bg-white border-end p-3">
            <h5 class="text-secondary px-3 mb-4">Menú</h5>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a href="/" class="nav-link active mb-2">
                        <i class="bi bi-people me-2"></i> Usuarios
                    </a>
                </li>
                <hr>
                <li>
                    <a href="#" class="nav-link link-danger cerrar-sesion">
                        <i class="bi bi-power me-2"></i> Cerrar Sesión
                    </a>
                </li>
            </ul>
        </div>

        <main class="flex-grow-1 p-4">
            {% block body %}
                <div class="container-fluid">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2>Gestión de Usuarios</h2>
                        <button class="btn btn-primary" onclick="loadUsers(1)">
                            <i class="bi bi-arrow-clockwise"></i> Refrescar
                        </button>
                    </div>
                    <button class="btn btn-success mb-3" data-bs-toggle="modal" data-bs-target="#modalCrearUsuario">
                            <i class="bi bi-plus-circle me-1"></i> Agregar Usuario
                        </button>
                    <div class="card shadow-sm">
                        
                        <div class="card-body p-0">
                            
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>ID</th>
                                            <th>Nombre</th>
                                            <th>Usuario</th>
                                            <th>Tipo</th>
                                            <th>Nif</th>
                                            <th>Email</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody id="table-body">
                                        <tr>
                                            <td colspan="7" class="text-center py-5">
                                                <div class="spinner-border text-primary" role="status"></div>
                                                <p class="mt-2">Cargando usuarios...</p>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            {% endblock %}
        </main>
    </div>

    <div class="modal fade" id="modalEditarUsuario" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Editar Usuario</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="formEditarUsuario">
                    <input type="hidden" id="id">
                    
                    <div class="mb-3">
                        <label class="form-label">Nombre y Apellidos</label>
                        <input type="text" class="form-control" id="nombreApellidos" required>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Correo Electrónico</label>
                        <input type="email" class="form-control" id="correo" required>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">NIF/DNI</label>
                            <input type="text" class="form-control" id="nif" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Tipo ID</label>
                            <select class="form-select" id="tipo_id">
                                <option value="1">DNI</option>
                                <option value="2">Pasaporte</option>
                                <option value="3">NIE</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div id="container-errores-api-edit" class="mt-3" style="display: none;">
                <div class="alert alert-danger pb-0">
                    <ul id="lista-errores-edit" class="list-unstyled mb-2">
                        </ul>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-success" onclick="guardarCambios()">Guardar Cambios</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalCrearUsuario" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg"> <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title"><i class="bi bi-person-plus me-2"></i>Nuevo Usuario</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="formCrearUsuario">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Username</label>
                            <input type="text" class="form-control" id="create_user" placeholder="ej: jose1" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Nombre y Apellidos</label>
                            <input type="text" class="form-control" id="create_nombreApellidos" placeholder="Jose Ballesteros" required>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">Correo Electrónico</label>
                            <input type="email" class="form-control" id="create_correo" placeholder="jose1@mail.com" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">NIF</label>
                            <input type="text" class="form-control" id="create_nif" placeholder="Opcional">
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">Contraseña</label>
                            <input type="password" class="form-control" id="create_password" required>
                        </div>

                        <div class="col-md-12 mb-3">
                            <label class="form-label">Tipo</label>
                            <select class="form-select" id="create_tipo_id">
                                <option value="1">DNI</option>
                                <option value="2">Pasaporte</option>
                                <option value="3">NIE</option>
                                <option value="4" selected>Otro (Tipo 4)</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div id="container-errores-api" class="mt-3" style="display: none;">
                <div class="alert alert-danger pb-0">
                    <ul id="lista-errores" class="list-unstyled mb-2">
                        </ul>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-success" onclick="enviarNuevoUsuario()">Crear Usuario</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modalPassword" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content border-danger">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="bi bi-shield-lock me-2"></i>Actualizar Contraseña</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="formPassword">
                    <input type="hidden" id="pass_user_id">
                    
                    <div class="mb-3">
                        <label class="form-label fw-bold">Tu Contraseña Actual (Admin)</label>
                        <input type="password" class="form-control border-warning" id="admin_password_confirm" placeholder="Confirma tu identidad">
                        <div class="form-text text-muted">Necesitamos tu clave para autorizar este cambio.</div>
                    </div>

                    <hr>

                    <div class="mb-3">
                        <label class="form-label">Nueva Contraseña para el Usuario</label>
                        <input type="password" class="form-control" id="new_password" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Repetir Nueva Contraseña</label>
                        <input type="password" class="form-control" id="new_password_repeat" required>
                        <div id="pass-match-error" class="invalid-feedback">Las contraseñas no coinciden.</div>
                    </div>
                </form>
            </div>
            <div id="container-errores-api-password" class="mt-3" style="display: none;">
                <div class="alert alert-danger pb-0">
                    <ul id="lista-errores-password" class="list-unstyled mb-2">
                        </ul>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger" onclick="ejecutarCambioPassword()">Actualizar Clave</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script>
        const BASE_URL = "{{base_url}}";
    </script>
    <script src="{{base_url}}/assets/home.js"></script>
    <script>
    let currentPage = 1;

    document.addEventListener("DOMContentLoaded", () => {
        loadUsers(currentPage);
    });

    async function loadUsers(page) {
        const tableBody = document.getElementById('table-body');
        const pagination = document.getElementById('pagination-controls');
        
        const API_URL = `{{base_url}}/api/users/list`;

        try {
            const response = await fetch(API_URL, {
                headers: {
                    'Authorization': `Token ${localStorage.getItem('token')}` // Si usas tokens
                }
            });
            const data = await response.json();

            // Limpiamos la tabla para renderizar la informacion
            tableBody.innerHTML = '';

            // inflamos las filas con la data de la API
            data.forEach(user => {
                tableBody.innerHTML += `
                    <tr>
                        <td><b>${user.id}</b></td>
                        <td>${user.nombre_apellidos}</td>
                        <td><span class="badge bg-light text-dark">@${user.user}</span></td>
                        <td><span class="badge bg-light text-dark">${user.tipo}</span></td>
                        <td><span class="badge bg-light text-dark">${user.nif ? user.nif : '-'}</span></td>
                        <td>${user.correo}</td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary edit-silice" data-user-id="${user.id}"><i class="bi bi-pencil"></i></button>
                            <button class="btn btn-sm btn-outline-danger delete-silice" data-user-id="${user.id}"><i class="bi bi-trash"></i></button>
                            <button class="btn btn-sm btn-outline-secondary edit-pass-silice" data-user-id="${user.id}" onclick="abrirModalPassword(${user.id})"><i class="bi bi-key"></i></button>
                        </td>
                    </tr>
                `;
            });

        } catch (error) {
            tableBody.innerHTML = `<tr><td colspan="7" class="text-center text-danger">Error al cargar datos ` + error.message + `</td></tr>`;
        }
    }


</script>
{% endblock %}